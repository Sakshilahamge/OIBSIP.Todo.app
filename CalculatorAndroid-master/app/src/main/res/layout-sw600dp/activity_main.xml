<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/bgColor" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.15">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="120dp"
            android:layout_height="95dp"
            android:src="?attr/themeSwitcher"
            android:scaleX="3"
            android:scaleY="3"
            android:background="?attr/neutralColor"
            android:contentDescription="@string/switch_theme"
            android:onClick="onButtonThemeSwitcherClick" />

    </FrameLayout>

    <TextView
        android:id="@+id/textVisualInput"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.8"
        android:layout_margin="23dp"
        android:autoSizeMaxTextSize="90sp"
        android:autoSizeMinTextSize="40sp"
        android:autoSizeTextType="uniform"
        android:gravity="end|bottom"
        android:maxLines="6"
        android:text="0"
        android:textColor="?attr/visualInputColor"
        tools:ignore="HardcodedText"
        tools:targetApi="o" />

    <TextView
        android:id="@+id/textResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.1"
        android:layout_margin="13dp"
        android:autoSizeMaxTextSize="76sp"
        android:autoSizeMinTextSize="30sp"
        android:autoSizeTextType="uniform"
        android:gravity="end|bottom"
        android:maxLines="2"
        android:text="0"
        android:textColor="?attr/resultColor"
        tools:ignore="HardcodedText"
        tools:targetApi="o" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/buttonCalculatorBackspace"
            style="@style/CalculatorButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#439C9C9C"
            android:enabled="true"
            android:onClick="onButtonCalculatorBackspaceClick"
            android:text="⌫"
            android:textSize="63sp"
            android:textColor="@color/orange"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/buttonCalculatorOpenBracket"
            style="@style/CalculatorButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#439C9C9C"
            android:enabled="true"
            android:onClick="onButtonCalculatorOpenBracketClick"
            android:text="("
            android:textColor="@color/orange"
            android:textSize="65sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/buttonCalculatorCloseBracket"
            style="@style/CalculatorButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#439C9C9C"
            android:enabled="true"
            android:onClick="onButtonCalculatorCloseBracketClick"
            android:text=")"
            android:textColor="@color/orange"
            android:textSize="65sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/buttonCalculatorDivide"
            style="@style/CalculatorButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#439C9C9C"
            android:enabled="true"
            android:onClick="onButtonCalculatorDivideClick"
            android:text="÷"
            android:textColor="@color/orange"
            android:textSize="73sp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal" >

    <Button
        android:id="@+id/buttonDigit7"
        style="@style/CalculatorButtonBig"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:enabled="true"
        android:onClick="onButtonDigit7Click"
        android:text="7"
        android:textColor="?attr/digitColor"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/buttonDigit8"
        style="@style/CalculatorButtonBig"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:enabled="true"
        android:onClick="onButtonDigit8Click"
        android:text="8"
        android:textColor="?attr/digitColor"
        tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/buttonDigit9"
            style="@style/CalculatorButtonBig"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:enabled="true"
            android:onClick="onButtonDigit9Click"
            android:text="9"
            android:textColor="?attr/digitColor"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/buttonCalculatorMultiply"
            style="@style/CalculatorButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#439C9C9C"
            android:enabled="true"
            android:onClick="onButtonCalculatorMultiplyClick"
            android:text="×"
            android:textSize="70sp"
            android:textColor="@color/orange"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/buttonDigit4"
            style="@style/CalculatorButtonBig"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:enabled="true"
            android:onClick="onButtonDigit4Click"
            android:text="4"
            android:textColor="?attr/digitColor"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/buttonDigit5"
            style="@style/CalculatorButtonBig"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:enabled="true"
            android:onClick="onButtonDigit5Click"
            android:text="5"
            android:textColor="?attr/digitColor"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/buttonDigit6"
            style="@style/CalculatorButtonBig"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:enabled="true"
            android:onClick="onButtonDigit6Click"
            android:text="6"
            android:textColor="?attr/digitColor"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/buttonCalculatorMinus"
            style="@style/CalculatorButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#439C9C9C"
            android:enabled="true"
            android:onClick="onButtonCalculatorMinusClick"
            android:text="—"
            android:textSize="70sp"
            android:textColor="@color/orange"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/buttonDigit1"
            style="@style/CalculatorButtonBig"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:enabled="true"
            android:onClick="onButtonDigit1Click"
            android:text="1"
            android:textColor="?attr/digitColor"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/buttonDigit2"
            style="@style/CalculatorButtonBig"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:enabled="true"
            android:onClick="onButtonDigit2Click"
            android:text="2"
            android:textColor="?attr/digitColor"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/buttonDigit3"
            style="@style/CalculatorButtonBig"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:enabled="true"
            android:onClick="onButtonDigit3Click"
            android:text="3"
            android:textColor="?attr/digitColor"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/buttonCalculatorPlus"
            style="@style/CalculatorButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#439C9C9C"
            android:enabled="true"
            android:onClick="onButtonCalculatorPlusClick"
            android:text="+"
            android:textSize="75sp"
            android:textColor="@color/orange"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/buttonCalculatorClear"
            style="@style/CalculatorButtonBig"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#439C9C9C"
            android:enabled="true"
            android:onClick="onButtonCalculatorClearClick"
            android:text="C"
            android:textColor="@color/orange"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/buttonDigit0"
            style="@style/CalculatorButtonBig"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:enabled="true"
            android:onClick="onButtonDigit0Click"
            android:text="0"
            android:textColor="?attr/digitColor"
            tools:ignore="DuplicateSpeakableTextCheck,HardcodedText" />

        <Button
            android:id="@+id/buttonCalculatorDot"
            style="@style/CalculatorButtonBig"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#439C9C9C"
            android:enabled="true"
            android:onClick="onButtonCalculatorDotClick"
            android:text="•"
            android:textColor="?attr/digitColor"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/buttonCalculatorEqual"
            style="@style/CalculatorButtonBig"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00BCD4"
            android:enabled="true"
            android:gravity="center"
            android:onClick="onButtonCalculatorEqualClick"
            android:text="＝"
            android:textColor="@color/white"
            tools:ignore="HardcodedText,TextContrastCheck" />

    </LinearLayout>


</LinearLayout>